<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maimai.zz.maimai.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/imageOfBook"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.73"
        android:src="@drawable/loading28" />

    <EditText
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/edit_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.20">
        <ImageButton
            android:id="@+id/openCamera"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <ImageButton
            android:id="@+id/ScanNode"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/scan_code" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/cancelIt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            app:srcCompat="@drawable/cancel_book" />

        <ImageButton
            android:id="@+id/publishIt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/publish_book" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jude.rollviewpager.RollPagerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rollPagerView"
        android:layout_weight="2.48"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.82"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imgBtnOne"
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:layout_margin="8dp"
                android:layout_weight="0.79"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/jiantouindex" />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MaiMai提示"
                android:layout_weight="0.32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"  >

            <ImageButton
                android:id="@+id/imgBntTwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/fingerout" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.32"
                android:text="划一划"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"  >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:id="@+id/imgBntThree"
                android:src="@drawable/wifiindextools"
                android:scaleType="centerInside"
                android:background="@null"/>
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.17"
                android:text="无线System"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>